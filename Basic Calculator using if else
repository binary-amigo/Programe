#include <iostream>
using namespace std;
int main()
{
    int a,b;
    float operation;
    cout<<"Enter two no.";
    cin>>a>>b;
    cout<<"Enter operation i.e. 0 for +,1 for -,2 for *,3 for /"<<endl;
    cin>>operation;
    if (operation==0)
    {
        cout<<a+b;
    }
    else 
    {
        if (operation == 1)
        {
            cout<<a-b;
        }
        else
        {
            if (operation == 2)
            {
                cout<<a*b;
            }
            else
            {
                cout<<(float)a/b;
            }
        }
    }
    return 0;
}
